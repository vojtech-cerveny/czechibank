{
  "name": "czechibank",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "post:build": "mkdir build/standalone/.next && cp -r public build/standalone/ && cp -r .next/static build/standalone/.next/",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky install",
    "release": "standard-version",
    "prepare:db": "prisma generate & prisma migrate dev",
    "fill:db": "tsx scripts/fill-db.ts",
    "deploy:local": "next build && pm2 startOrRestart ecosystem.config.js --env local",
    "deploy:dev": "next build && pm2 startOrRestart ecosystem.config.js --env dev",
    "deploy:prod": "next build && pm2 startOrRestart ecosystem.config.js --env prod"
  },
  "dependencies": {
    "@dicebear/collection": "^7.0.4",
    "@dicebear/core": "^7.0.4",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.9.1",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.6",
    "jose": "^5.2.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.323.0",
    "next": "14.1.3",
    "next-themes": "^0.2.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.50.1",
    "react-nice-avatar": "^1.5.0",
    "recharts": "^2.12.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "node-loader": "^2.0.0",
    "postcss": "^8",
    "prettier": "^3.2.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^5.8.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.7.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,css,md,tsx,ts}": "npm run format"
  }
}
